# Production Environment Variables Example
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# API Keys and Secrets
SECRET_KEY=your_secret_key_here_use_openssl_rand_hex_32
API_KEY=your_api_key_for_basic_auth
ADMIN_API_KEY=your_admin_api_key_different_from_api_key

# FAL.AI Configuration
FAL_API_KEY=your_fal_ai_api_key

# Database Configuration
DATABASE_URL=postgresql://postgres:your_strong_password@db:5432/image2model
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password
POSTGRES_DB=image2model

# Redis Configuration
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_redis_password

# Celery Configuration
CELERY_BROKER_URL=redis://:your_redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your_redis_password@redis:6379/1

# Flower Configuration
FLOWER_BASIC_AUTH=admin:your_flower_admin_password

# Application Settings
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
UPLOAD_MAX_SIZE_MB=10
UPLOAD_MAX_FILES=25

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Security Settings
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true