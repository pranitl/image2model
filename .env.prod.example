# Production Environment Configuration
# Copy this file to .env.prod and fill in the values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=image2model
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
SECRET_KEY=your_super_secret_key_here_minimum_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
LOG_LEVEL=info

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
BACKEND_HOST=backend

# FAL.AI Configuration
FAL_KEY_ID=your_fal_key_id_here
FAL_KEY_SECRET=your_fal_key_secret_here

# Celery Configuration
WORKER_CONCURRENCY=4

# Flower Monitoring (optional)
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:your_flower_password_here

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Performance Tuning
GUNICORN_WORKERS=4
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090