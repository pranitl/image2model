# Production Environment Configuration
# Copy this file to .env and fill in the values

# Application
ENVIRONMENT=production
LOG_LEVEL=info
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=image2model
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Backend Configuration
BACKEND_HOST=backend
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
DOMAIN_NAME=yourdomain.com

# Worker Configuration
WORKER_CONCURRENCY=4

# FAL.AI API Configuration
FAL_KEY_ID=your-fal-key-id
FAL_KEY_SECRET=your-fal-key-secret

# Monitoring Configuration
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:secure-flower-password

# SSL/TLS (for production with HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Optional: Database connection string override
# DATABASE_URL=postgresql://postgres:password@postgres:5432/image2model

# Optional: Redis connection string override
# CELERY_BROKER_URL=redis://:password@redis:6379/0
# CELERY_RESULT_BACKEND=redis://:password@redis:6379/0